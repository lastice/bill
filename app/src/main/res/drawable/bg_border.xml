<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#CFCFCF" />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:right="1dp"><!--设置只有底部和右边有边框-->
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>